<h1>Users(<%= @users.count %>)</h1>

<% @users.each do |user| %>
	<div class="well" style="padding-top: 15px; padding-bottom: 35px;">
		<div class="col-xs-10 col-md-10">
			<%= user.name %> <%= user.surname %> |
			<%= user.email %>
		</div>
		<div class="col-xs-2 col-md-2">
			<%= link_to "View", user, class: "btn btn-info btn-xs" %>
		</div>
	</div>
<% end %>
